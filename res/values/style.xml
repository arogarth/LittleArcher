<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2px</item>
    </style>

    <style name="WHITE_RINGS" parent="@style/Row">
        <item name="android:background">#D9D9D9</item>
    </style>

    <style name="BLACK_RINGS" parent="@style/Row">
        <item name="android:background">#2B2B2B</item>
    </style>

    <style name="BLUE_RINGS" parent="@style/Row">
        <item name="android:background">#3D3DFF</item>
    </style>

    <style name="RED_RINGS" parent="@style/Row">
        <item name="android:background">#FF1F1F</item>
    </style>

    <style name="GOLD_RINGS" parent="@style/Row">
        <item name="android:background">#FFFF4D</item>
    </style>

    <style name="overview_row">
        <item name="android:width">15pt</item>
    </style>

    <style name="table_column_ring" parent="@android:style/TextAppearance.Medium">
<!--         <item name="android:background">@drawable/table_top</item> -->
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_weight">.20</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    
    <style name="table_column_sum" parent="table_column_ring">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

</resources>