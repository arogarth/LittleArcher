	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_marginBottom">2px</item>
    </style>

	<style name="WHITE_RINGS" parent="@style/Row">
        <item name="android:background">#D9D9D9</item>
    </style>
	<style name="BLACK_RINGS" parent="@style/Row">
        <item name="android:background">#2B2B2B</item>
    </style>
	<style name="BLUE_RINGS" parent="@style/Row">
        <item name="android:background">#3D3DFF</item>
    </style>
	<style name="RED_RINGS" parent="@style/Row">
        <item name="android:background">#FF1F1F</item>
    </style>
	<style name="GOLD_RINGS" parent="@style/Row">
        <item name="android:background">#FFFF4D</item>
    </style>
    
	<style name="overview_row">
	    <item name="android:width">13pt</item>
	</style>
</resources>