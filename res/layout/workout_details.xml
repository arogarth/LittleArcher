<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_weight="0"
        android:id="@+id/details_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            style="@style/overview_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E" />
    </LinearLayout>

    <View
	    android:layout_width="fill_parent"
	    android:layout_height="0.5pt"
	    android:background="#ffffff" />
    
    <ListView
        android:layout_weight="3"
        android:id="@+id/list_details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </ListView>

    <View
	    android:layout_width="fill_parent"
	    android:layout_height="0.5pt"
	    android:background="#ffffff" />
    
    <View
        android:layout_marginTop="1dip"
	    android:layout_width="fill_parent"
	    android:layout_height="0.5pt"
	    android:background="#ffffff" />
    
    <include
        android:id="@+id/sum_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        layout="@layout/overview_row" />

</LinearLayout>